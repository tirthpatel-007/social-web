<% include ./partials/header.ejs %>

    <div class="min-h-screen bg-gray-200 flex items-center justify-center p-4">
        <div class="bg-white rounded-2xl w-full max-w-sm relative overflow-hidden shadow-xl">
            <div class="p-6">
                <div class="flex justify-center mb-4">
                    <div class="w-10 h-10 bg-red-600 rounded-full flex items-center justify-center">
                        <svg class="w-6 h-6 text-white" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 5.079 3.158 9.417 7.618 11.024-.105-.949-.199-2.403.041-3.439.219-.937 1.406-5.957 1.406-5.957s-.359-.72-.359-1.781c0-1.663.967-2.911 2.168-2.911 1.024 0 1.518.769 1.518 1.688 0 1.029-.653 2.567-.992 3.992-.285 1.193.6 2.165 1.775 2.165 2.128 0 3.768-2.245 3.768-5.487 0-2.861-2.063-4.869-5.008-4.869-3.41 0-5.409 2.562-5.409 5.199 0 1.033.394 2.143.889 2.741.099.12.112.225.085.345-.09.375-.293 1.199-.334 1.363-.053.225-.172.271-.402.162-1.495-.69-2.433-2.878-2.433-4.646 0-3.776 2.748-7.252 7.92-7.252 4.158 0 7.392 2.967 7.392 6.923 0 4.135-2.607 7.462-6.233 7.462-1.214 0-2.357-.629-2.748-1.378 0 0-.599 2.297-.744 2.824-.282 1.092-1.02 2.319-1.509 3.256C9.678 23.193 10.814 23.5 12.017 23.5c6.624 0 11.99-5.367 11.99-12C24.007 5.367 18.641.001 12.017.001z"/>
                        </svg>
                    </div>
                </div>

                <div class="text-center mb-2">
                    <h1 class="text-2xl font-semibold text-gray-900 mb-1">Welcome to</h1>
                    <h2 class="text-2xl font-semibold text-gray-900">Social</h2>
                </div>

                <form action="/login" method="post" class="space-y-3">
                    <div>
                        <label class="block text-sm font-medium text-gray-900 mb-1">Email</label>
                        <input 
                            type="email" 
                            placeholder="email" 
                            name="email"
                            class="w-full px-3 py-2.5 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent text-gray-900 placeholder-gray-500 text-sm"
                        />
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-900 mb-1">Password</label> 
                        <div class="relative"> 
                            <input 
                                type="password"
                                name="password"
                                placeholder="Password" 
                                class="w-full px-3 py-2.5 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent text-gray-900 placeholder-gray-500 pr-10 text-sm"
                            />
                            <button type="button" class="absolute right-3 top-1/2 transform -translate-y-1/2">
                                <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                </svg>
                            </button>
                        </div>
                    </div>

                    

                    <div class="text-left">
                        <a href="#" class="text-blue-600 text-sm font-medium hover:underline">Forgot your password?</a>
                    </div>

                    <button type="submit" class="w-full bg-red-600 text-white font-semibold py-2.5 px-4 rounded-full hover:bg-red-700 transition-colors text-sm">
                        Log in
                    </button>

                    <div class="text-center text-sm font-semibold text-gray-900 ">
                        OR
                    </div>

                    <a href="/auth/google" class="w-full border border-gray-300 text-gray-900 font-semibold py-2.5 px-4 rounded-full flex items-center justify-center space-x-2 hover:bg-gray-50 transition-colors text-sm">
                        <svg class="w-4 h-4" viewBox="0 0 24 24">
                            <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                        </svg>
                        <span>Continue with Google</span>
                    </a>
                </form>

                <div class="mt-4 text-xs text-gray-600 text-center leading-relaxed">
                    By continuing, you agree to Pinterest's 
                    <a href="#" class="underline">Terms of Service</a> 
                    and acknowledge you've read our 
                    <a href="#" class="underline">Privacy Policy</a>. 
                    <a href="#" class="underline">Notice at collection</a>.
                </div>

                <div class="mt-4 text-center space-y-1">
                    <div class="text-sm font-semibold text-gray-900">
                        Not on Pinterest yet? <a href="/" class="underline">Sign up</a>
                    </div>
                    <div class="text-sm text-gray-700">
                        Are you a business? <a href="#" class="font-semibold underline">Get started here!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

